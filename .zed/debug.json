// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug zelph",
    "adapter": "CodeLLDB",
    "request": "launch",
    "program": "$ZED_WORKTREE_ROOT/build-debug/bin/zelph",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": [],
    "env": {
      "RUST_BACKTRACE": "1",
    },
    "build": {
      "command": "cmake",
      "args": ["--build", "build-debug"],
    },
  },
]
